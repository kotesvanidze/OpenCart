{% if languages|length > 0 %}
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            {% for language in languages %}
                {% if language.code == code %}
                    <span class="flag"><img src="catalog/language/{{ language.code }}/{{ language.code }}.png" alt="{{ language.name }}" title="{{ language.name }}"></span> {{ text_language }} <span class="caret"></span>
                {% endif %}
            {% endfor %}
        </a>
    </li>
    <div class="dropdown-menu">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-language">
            {% for language in languages %}
                <li>
                  <a href="{{ language.code }}" name="{{ language.code }}">
                     <img src="catalog/language/{{ language.code }}/{{ language.code }}.png" alt="{{ language.name }}" title="{{ language.name }}">{{ language.name }}
                  </a>
                </li>
            {% endfor %}
           <input type="hidden" name="code" value="" />
           <input type="hidden" name="redirect" value="{{ redirect }}" />
        </form>
    </div>
{% endif %}